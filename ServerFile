SHORT_SITE
SHORT_USERNAME
SHORT_PASSWORD
SHORT_DB_PREFIX=short_

SHORT_CONFIG_PATH=src/config.php

# WP_SALT_ prefix would fetch randomized salt from wordpress api
WP_SALT_COOKIEKEY
